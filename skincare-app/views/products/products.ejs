<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>Skincare Products</title>
    <style>
        body {
            background-color: #f8f9fa;
            color: #495057;
        }
        .container {
            max-width: 1200px;
        }
        .card {
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            transition: all 0.3s;
        }
        .card:hover {
            transform: translateY(-5px);
        }
        .btn-custom {
            background-color: #6c757d;
            border-color: #6c757d;
            color: white;
        }
        .btn-custom:hover {
            background-color: #5a6268;
            border-color: #545b62;
            color: white;
        }
        .product-image {
            height: 200px;
            width: 100%;
            object-fit: cover;
            cursor: pointer;
            border-radius: 5px; /* Adds a slight border radius */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Subtle shadow for a professional look */
            transition: transform 0.3s; /* Smooth transition for hover effect */
        }
        .product-image:hover {
            transform: scale(1.05); /* Slight zoom on hover for interactivity */
        }
        .product-title {
            font-size: 1.3rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }
        .navbar {
            background-color: #ffffff;
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }
        .navbar-brand {
            font-weight: 700;
            color: #ff69b4;
            font-size: 1.5rem;
        }
        .nav-link {
            color: #4a4a4a;
            font-weight: 500;
            transition: color 0.3s ease;
        }
        .nav-link:hover {
            color: #ff69b4;
        }
    </style>
</head>
<body>
    <!-- Navigation bar -->
    <nav class="navbar navbar-expand-lg navbar-light sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/">GlowGuide</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/products">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/ingredients">Ingredients</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/progress">Progress</a>
                    </li>
                </ul>
                <div class="d-flex">
                    <a href="/login" class="btn btn-dark me-2">SIGN IN</a>
                    <a href="/signup" class="btn btn-outline-dark">SIGN UP</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container py-5">
        <h1 class="text-center mb-5">Skincare Products</h1>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% products.forEach(product => { %>
                <div class="col">
                    <div class="card h-100">
                        <a href="/product/<%= product.product_id %>">
                            <img src="<%= product.image %>" class="card-img-top product-image" alt="<%= product.name %>">
                        </a>
                        <div class="card-body">
                            <h5 class="product-title"><%= product.name %></h5>
                            <p class="product-brand"><%= product.brand %> </p>
                            <p class="product-price">$<%= product.price %></p>
                            <!-- Add more product details here if needed -->
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
