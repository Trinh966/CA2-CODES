<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>Edit Progress Entry</title>
    <style>
        body {
            background-color: #f8f9fa;
            color: #495057;
        }
        .container {
            max-width: 800px;
            margin-top: 50px;
        }
        .card {
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        .card-header {
            background-color: #6c757d;
            color: white;
            font-size: 1.5rem;
            padding: 1rem;
        }
        .form-label {
            font-weight: bold;
            color: #495057;
        }
        .btn-custom {
            background-color: #6c757d;
            border-color: #6c757d;
            color: white;
        }
        .btn-custom:hover {
            background-color: #5a6268;
            border-color: #545b62;
            color: white;
        }
        .navbar {
      background-color: #ffffff;
      box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }
            
        .navbar {
          background-color: #ffffff;
          box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }
        .navbar-brand {
          font-weight: 700;
          color: #ff69b4;
          font-size: 1.5rem;
        }
        .nav-link {
          color: #4a4a4a;
          font-weight: 500;
          transition: color 0.3s ease;
        }

        .nav-link:hover {
            color: #ff69b4;
        }


    </style>
</head>
<body>
       <!-- Navigation bar -->
  <nav class="navbar navbar-expand-lg navbar-light sticky-top">
    <div class="container">
      <a class="navbar-brand" href="/">GlowGuide</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/products">Products</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/ingredients">Ingredients</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/progress">Progress</a>
          </li>
        </ul>
        <div class="d-flex">
          <a href="/login" class="btn btn-dark me-2">SIGN IN</a>
          <a href="/signup" class="btn btn-outline-dark">SIGN UP</a>
        </div>
      </div>
    </div>
  </nav>

    <div class="container">
        <div class="card">
            <div class="card-header">
                Edit Progress Entry
            </div>
            <div class="card-body">
                <form action="/editprogress/<%= entry.id %>" method="POST">
                    <div class="mb-3">
                        <label for="date" class="form-label">Date:</label>
                        <input type="date" class="form-control" id="date" name="date" value="<%= entry.date.toISOString().split('T')[0] %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="skin_condition" class="form-label">Skin Condition:</label>
                        <input type="text" class="form-control" id="skin_condition" name="skin_condition" value="<%= entry.skin_condition %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="products_used" class="form-label">Products Used:</label>
                        <textarea class="form-control" id="products_used" name="products_used" rows="3" required><%= entry.products_used %></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="notes" class="form-label">Notes:</label>
                        <textarea class="form-control" id="notes" name="notes" rows="3"><%= entry.notes %></textarea>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Update Entry
                        </button>
                        <a href="/progress" class="btn btn-custom">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>